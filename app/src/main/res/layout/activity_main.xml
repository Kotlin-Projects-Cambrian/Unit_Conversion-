<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/UnitConversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_centerHorizontal = "true"
        android:background="@drawable/title_background"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/inputLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/From"
        android:textSize="30sp"
        android:background="@drawable/title_background"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:layout_marginStart="30dp"/>
    <TextView
        android:id="@+id/inputLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/To"
        android:textSize="30sp"
        android:background="@drawable/title_background"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:layout_marginStart="30dp"
        android:layout_below="@id/inputLabel"/>

    <EditText
        android:id="@+id/inputField"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/edt_background"
        android:layout_below="@+id/inputLabel2"
        android:layout_marginTop="18dp"
        android:hint="@string/input"
        android:paddingStart="10dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        />

    <TextView
        android:id="@+id/outputLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/converted"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:layout_below="@id/inputField"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/outputField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/outputLabel"
        android:layout_alignBaseline="@id/outputLabel"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"/>

    <Spinner
        android:id="@+id/unitSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/inputLabel"
        android:layout_marginTop="45dp"
        android:layout_marginStart="50dp"/>
    <Spinner
        android:id="@+id/unitSpinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/inputLabel2"
        android:layout_marginTop="120dp"
        android:layout_marginStart="80dp"/>

    <Button
        android:id="@+id/convertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/convert"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="290dp"
        android:gravity="center"
        android:layout_marginStart="180dp"
/>
</RelativeLayout>